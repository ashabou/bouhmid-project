# Orion Agent Environment Variables

# Application
ENVIRONMENT=development
HOST=0.0.0.0
PORT=8002
LOG_LEVEL=INFO

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/shabou_autopieces

# Redis
REDIS_URL=redis://localhost:6379/2

# Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Forecasting Settings
MIN_HISTORY_DAYS=365
FORECAST_HORIZON_DAYS=30
CONFIDENCE_LEVEL=0.95
MODEL_RETRAIN_DAYS=7

# Weather API (optional)
WEATHER_API_KEY=your_openweather_api_key_here

# Email/SMTP Settings (for alerts and insights)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_USE_TLS=true
FROM_EMAIL=orion@shabou-autopieces.tn
FROM_NAME=Orion Agent
ALERT_RECIPIENTS=inventory@shabou-autopieces.tn,manager@shabou-autopieces.tn
