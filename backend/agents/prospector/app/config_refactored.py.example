"""
Prospector Agent Configuration (REFACTORED)

This is the refactored version using shared.config.BaseSettings
to eliminate code duplication.

To use: Rename to config.py after migrating
"""
import os
from typing import Optional
from shared.config import BaseSettings


class Settings(BaseSettings):
    """
    Prospector Agent settings extending shared base configuration.

    Only Prospector-specific settings are defined here.
    Common settings (DATABASE_URL, REDIS, CELERY, etc.) are inherited.
    """

    # App info
    APP_NAME: str = "Prospector Agent"
    VERSION: str = "1.0.0"

    # Override default port
    PORT: int = int(os.getenv("PORT", "8001"))

    # Google Places API
    GOOGLE_PLACES_API_KEY: Optional[str] = os.getenv("GOOGLE_PLACES_API_KEY")

    # Scraping settings
    SCRAPING_USER_AGENT: str = (
        "Mozilla/5.0 (Windows NT 10.0; Win64; x64) "
        "AppleWebKit/537.36 (KHTML, like Gecko) "
        "Chrome/91.0.4472.124 Safari/537.36"
    )
    SCRAPING_TIMEOUT: int = 30
    SCRAPING_MAX_RETRIES: int = 3

    # Lead scoring
    MIN_POTENTIAL_SCORE: int = 0
    MAX_POTENTIAL_SCORE: int = 100

    # Rate limiting
    GOOGLE_API_RATE_LIMIT: int = 10  # requests per second
    SCRAPING_RATE_LIMIT: int = 5  # requests per second

    # Email settings (specific recipients)
    FROM_EMAIL: str = os.getenv("FROM_EMAIL", "prospector@shabou-autopieces.tn")
    FROM_NAME: str = os.getenv("FROM_NAME", "Prospector Agent")
    REPORT_RECIPIENTS: str = os.getenv(
        "REPORT_RECIPIENTS",
        "owner@shabou-autopieces.tn"
    )  # Comma-separated email addresses

    # Cost protection - CRITICAL FOR BUDGET
    ENABLE_COST_PROTECTION: bool = os.getenv("ENABLE_COST_PROTECTION", "true").lower() == "true"
    GOOGLE_API_MAX_CALLS_PER_DAY: int = int(os.getenv("GOOGLE_API_MAX_CALLS_PER_DAY", "150"))
    GOOGLE_API_MAX_CALLS_PER_MONTH: int = int(os.getenv("GOOGLE_API_MAX_CALLS_PER_MONTH", "4500"))

    # Scraping frequency (optimize for cost)
    SCRAPING_FREQUENCY: str = os.getenv("SCRAPING_FREQUENCY", "monthly")  # daily, weekly, monthly
    CACHE_RESULTS_DAYS: int = int(os.getenv("CACHE_RESULTS_DAYS", "90"))


# Global settings instance
settings = Settings()
