      <h2 style="color: #e74c3c; margin-top: 0;">{{ .Labels.alertname }}</h2>
      <p style="font-size: 16px;"><strong>{{ .Annotations.summary }}</strong></p>
      <p>{{ .Annotations.description }}</p>

      <div style="margin: 15px 0;">
        <span class="label">üî• CRITICAL</span>
        <span class="label">Service: {{ .Labels.service }}</span>
        {{ if .Labels.instance }}
        <span class="label">Instance: {{ .Labels.instance }}</span>
        {{ end }}
      </div>

      <p class="timestamp">
        <strong>Alert Started:</strong> {{ .StartsAt.Format "2006-01-02 15:04:05 MST" }}<br>
        <strong>Duration:</strong> {{ since .StartsAt }}
